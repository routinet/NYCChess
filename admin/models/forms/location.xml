<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="hidden"/>
        <field
                name="name"
                type="text"
                label="Name"
                description="Location Name"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="addr1"
                type="text"
                label="Address"
                description="Street Address"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="addr2"
                type="text"
                label="Line 2"
                description="Street Address Line 2 (Optional)"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="city"
                type="text"
                label="City"
                description="Location City"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="state"
                type="text"
                label="State"
                description="Location State"
                size="5"
                class="inputbox"
                default=""
        />
        <field
                name="zip"
                type="text"
                label="Zip Code"
                description="Location Zip Code"
                size="10"
                class="inputbox"
                default=""
        />
        <field
                name="active"
                type="checkbox"
                label="Active"
                description="Is Location active?"
                default="0"
        />
    </fieldset>
</form>