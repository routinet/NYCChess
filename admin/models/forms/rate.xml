<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="hidden"/>
        <field
                name="label"
                type="text"
                label="Label"
                description="Label for the rate"
                size="25"
                class="inputbox"
                default=""
        />
        <field
                name="active"
                type="checkbox"
                label="Active"
                description="Is rate active?"
                default="0"
        />
        <field
                name="modifier"
                type="number"
                label="Price"
                description="Price modifier for this rate"
                size="5"
                class="inputbox"
                default="0.00"
        />
        <field
                name="is_multiplier"
                type="checkbox"
                label="Treat as Percentage?"
                description="If checked, the event's base price is multiplied by this value.  If not checked, this value is added to the price as a flat rate.  This value can be negative if this box is not checked."
                default="0"
        />
    </fieldset>
</form>